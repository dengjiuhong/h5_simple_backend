            //-   source(src='./v/exit_0.mp4', type='video/mp4')
            #cube
              .stage
                .container
      .page.p3
        #shareit
          img#share_gif(src="./image/share_my.gif")
        .share_wrap
            .share_name test
            .share_id 0001
            .share_pic
        .share_my
        .change_my
