doctype html
html(lang='en')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    link(rel='stylesheet', href='./css/index.css')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, target-densitydpi=device-dpi, user-scalable=no')
    meta(name='apple-mobile-web-app-capable', content='yes')
    title 博物馆
  body
    script(src='http://res.wx.qq.com/open/js/jweixin-1.2.0.js')
    script(src='./js/jquery-3.1.0.min.js')
    script(src='./js/uploadImage.js')
    script(src='./js/exif.js')
    script(src='./js/index.js')
    .wrap
      .page.loading
        img.loading_head(src='/image/loading_head.png')
        .progress
          img.background(src='/image/loading_bg.png')
          img.bar(src='/image/loading_bar.png')
        img.loading_text(src='/image/loading_text.png')
        img.loading_title(src='/image/loading_title.png')
      audio#audio-bg(style="width:0;height:0", loop="loop")
        source(src='./audio/audio.mp3', type="audio/mpeg")
      audio#audio-btn(style="width:0;height:0")
        source(src='./audio/btn.mp3', type="audio/mpeg")
      audio#audio-up(style="width:0;height:0")
        source(src='./audio/up.mp3', type="audio/mpeg")
      audio#audio-down(style="width:0;height:0")
        source(src='./audio/down.mp3', type="audio/mpeg")
      audio#audio-close(style="width:0;height:0")
        source(src='./audio/close.mp3', type="audio/mpeg")
      audio#audio-in(style="width:0;height:0")
        source(src='./audio/in.mp3', type="audio/mpeg")
      audio#audio-open(style="width:0;height:0")
        source(src='./audio/open.mp3', type="audio/mpeg")
      .page.p0
        img(src='./image/close.png', style='display:none')
        video#my_video_1(preload='preload', webkit-playsinline='', playsinline='', x5-video-player-type='h5', x5-video-player-fullscreen='false', x-webkit-airplay="allow", x5-video-orientation='landscape|portrait', style='', poster="/image/first_poster.png")
          source(src='./v/01-near.mp4', type='video/mp4')
        video#my_video_2(preload='preload', webkit-playsinline='', playsinline='', x5-video-player-type='h5', x5-video-player-fullscreen='false', x5-video-orientation='landscape|portrait', style='display:none')
          source(src='./v/02-openin.mp4', type='video/mp4')
        #first_enter_box
      .page.p1
        .upload_wrap
          .upload
            input#btn_upload(type='file', accept='image/*', onchange='selectFileImage(this);')
            img#pic(src="/image/choose_pic.png")
          .name_block
            .name 馆长
            .input_name
              input#name(type='text', name='name')
          .phone_block
            .phone 手机
            .input_phone
              input#phone(type='text', name='phone', onkeyup="value=value.replace(/[^\\d]/g,'')")
        #in
        #welcome
      .page.p2
        #view
          #bigCube
            #try
            #close(style='display:none')
            #light_word(style='display:none')
            #share_in(style='display:none')
            video#close_0(preload='preload', webkit-playsinline='', playsinline='', x5-video-player-type='h5', x5-video-player-fullscreen='false', x5-video-orientation='landscape|portrait', style='display:none')
              source(src='./v/close_0.mp4', type='video/mp4')
            video#exit_0(preload='preload', webkit-playsinline='', playsinline='', x5-video-player-type='h5', x5-video-player-fullscreen='false', x5-video-orientation='landscape|portrait', style='display:none')
              source(src='./v/exit_0.mp4', type='video/mp4')
            #cube
              .stage
                .container
      .page.p3
        .share_wrap
            .share_name test
            .share_id 0001
            .share_pic
        .share_my
        .change_my
    script(src='./js/preload.js')
